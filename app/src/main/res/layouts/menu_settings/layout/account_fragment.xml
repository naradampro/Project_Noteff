<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.common.AccountFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_default"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imUProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_image"
                    app:riv_corner_radius="50dp" />



                <Button
                    android:id="@+id/next_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Change Profile Photo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.866"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.875"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:layout_marginTop="85dp"
                    app:strokeColor="#286DE7" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/fname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="24dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape"
                    android:hint="First Name"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/ppwrd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape"
                    android:hint="Last Name"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape"
                    android:hint="Email"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="20dp"
                    android:inputType="textEmailAddress"/>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:layout_marginTop="18dp"
                    android:textSize="12sp"
                    android:text="Update Profile"
                    android:textColor="@color/white"
                    android:gravity="center"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_default"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="Change Password"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/prpwrd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape"
                    android:hint="Current Password"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/ppin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape"
                    android:hint="New Password"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/rnpwrd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape"
                    android:hint="Retype New Password"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:layout_marginTop="18dp"
                    android:textSize="12sp"
                    android:text="Update Password"
                    android:textColor="@color/white"
                    android:gravity="center"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_default"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="Change Pin"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/prpin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape"
                    android:hint="Current Pin"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/npin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape"
                    android:hint="New Pin"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/rnpin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape"
                    android:hint="Retype New Pin"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:layout_marginTop="18dp"
                    android:textSize="12sp"
                    android:text="Update Pin"
                    android:textColor="@color/white"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>